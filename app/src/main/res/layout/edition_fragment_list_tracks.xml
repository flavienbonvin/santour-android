<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_track_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="ch.hesso.santour.view.Edition.Fragment.FragmentListTracks">


    <LinearLayout
        android:id="@+id/linear_layout_list_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">


        <EditText
            android:id="@+id/input_search_track"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusedByDefault="false"
            android:hint="@string/searchTrack"
            android:inputType="textVisiblePassword" />

        <ListView
            android:id="@+id/list_view_track"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
